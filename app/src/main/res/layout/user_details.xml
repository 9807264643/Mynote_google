<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center">

    <ImageView
        android:id="@+id/img_google"
        android:layout_width="@dimen/size145"
        android:layout_height="@dimen/size145"
        android:layout_marginBottom="@dimen/size50"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_avenirheavy"
        android:gravity="center"
        android:text="Full Name"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size30" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/avenir_medium"
        android:hint="full name"
        android:paddingStart="@dimen/size130"
        android:paddingEnd="@dimen/size16"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size18" />

    <TextView
        android:id="@+id/txt_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_avenirheavy"
        android:gravity="center"
        android:text="Email"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size30" />

    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/avenir_medium"
        android:hint="email"
        android:inputType="textEmailAddress"
        android:paddingStart="@dimen/size130"
        android:paddingEnd="@dimen/size16"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size18" />

    <TextView
        android:id="@+id/txt_phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/font_avenirheavy"
        android:gravity="center"
        android:text="Mobile no."
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size30" />

    <EditText
        android:id="@+id/edit_phones"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:background="@drawable/edit_text_border"
        android:fontFamily="@font/avenir_medium"
        android:inputType="phone"
        android:maxLength="10"
        android:hint="phone no."
        android:paddingStart="@dimen/size130"
        android:paddingEnd="@dimen/size16"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/size18" />

    <Button
        android:id="@+id/btn_submit"
        android:layout_width="match_parent"
        android:layout_height="@dimen/size50"
        android:background="@drawable/edit_text_border"
        android:text="Submit"
        android:textColor="@color/colorBlack"
        android:textAllCaps="false"
        android:textSize="@dimen/size20"
        android:paddingStart="@dimen/size10"
        android:layout_toEndOf="@+id/icon_gooogle"
        android:fontFamily="@font/avenir_medium"
        android:layout_marginTop="@dimen/size13"
        app:backgroundTint="@color/colorGrey"/>


</LinearLayout>